<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAE1"
    tools:context=".AdminLogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="PANCHAYAT ADMIN!!"
        android:textColor="#020202"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/blk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_code_admin"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/block_txtview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"

            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:text="BLOCK"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_block_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blk"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/panchayat_txtview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="PANCHAYAT"
            android:inputType="text"
            android:phoneNumber="false"
            android:text="PANCHAYAT"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_panchayat_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_vertical" />

    </LinearLayout>
    <EditText
        android:id="@+id/login_phoneno_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Your 10 Digit  Mobile Number"
        android:padding="10dp"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/verification_code_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Verification Code"
        android:padding="10dp"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/send_verification_btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="35dp"
        android:background="#1D0940"
        android:padding="10dp"
        android:text="Send Verification Code"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verify_code_btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="35dp"
        android:background="#1D0940"
        android:padding="10dp"
        android:text="Verify"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>