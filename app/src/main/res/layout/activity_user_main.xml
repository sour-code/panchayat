<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAEFEC"
    tools:context=".user_main">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="SELECT COMPLAINT!!"
        android:textColor="#010004"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/log_out_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/logout" />

    <LinearLayout
        android:id="@+id/xzy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerInParent="false"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/food_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginEnd="35dp"
            android:background="#070D32"
            android:foregroundGravity="center"
            android:padding="4dp"
            android:text="Unavailablility of Food,From Saraikela Kharsawan"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/outside_ppl_prblm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#070D32"
            android:foregroundGravity="center"
            android:padding="4dp"
            android:text="Unavailablility of Food,Outside Saraikela Kharsawan"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/show_sts_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="#070D32"
            android:padding="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="SHOW REQUEST STATUS"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hide_sts_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="#070D32"
            android:padding="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="HIDE REQUEST STATUS"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xzy"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible" />

</RelativeLayout>